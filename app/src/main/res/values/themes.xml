<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AmazonClone" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Transparent status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Set dark icons on the light background of the status bar -->
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="tabIndicatorColor">@color/transparent</item>

        <!-- Remove windowTranslucentStatus to prevent the shadow effect -->
        <item name="android:windowTranslucentStatus">false</item>

    </style>

    <style name="Theme.AmazonClone" parent="Base.Theme.AmazonClone" />
</resources>
